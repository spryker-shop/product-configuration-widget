{% extends template('widget') %}

{% define data = {
    isVisible: _widget.isVisible,
    productConfigurationRouteName: _widget.productConfigurationRouteName | default,
    sourceType: _widget.sourceType | default,
    itemGroupKey: _widget.itemGroupKey | default,
    quantity: _widget.quantity | default,
} %}

{% block body %}
    {% if data.isVisible %}
        <a href="{{
        path(
            data.productConfigurationRouteName,
            {'item-group-key': data.itemGroupKey, 'source-type': data.sourceType, 'quantity': data.quantity})
        }}">
            {{ 'product_configuration_widget.configure' | trans }}
        </a>
    {% endif %}
{% endblock %}
