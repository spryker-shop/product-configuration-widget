{% extends template('widget') %}

{% define data = {
    isVisible: _widget.isVisible,
    form: _widget.form | default,
    productConfiguratorRouteName: _widget.productConfiguratorRouteName | default,
    sourceType: _widget.sourceType | default,
    itemGroupKey: _widget.itemGroupKey | default,
    quantity: _widget.quantity | default,
} %}

{%- block template -%}
    {% if data.isVisible %}
        {{ parent() }}
    {% endif %}
{%- endblock -%}

{% block body %}
    {% include molecule('configuration-form', 'ProductConfigurationWidget') with {
        data: {
            form: data.form,
            productConfiguratorRouteName: data.productConfiguratorRouteName,
        },
    } only %}
{% endblock %}
