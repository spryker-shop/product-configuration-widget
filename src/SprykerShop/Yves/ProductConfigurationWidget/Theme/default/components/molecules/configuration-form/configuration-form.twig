{% extends model('component') %}

{% define config = {
    name: 'configuration-form',
} %}

{% define data = {
    form: required,
    productConfigurationRouteName: required,
    actionParams: {},
    submitButtonClass: 'button button--expand',
    submitButtonIcon: 'wrench',
    submitButtonIconModifiers: [],
} %}

{% block body %}
    {{ form_start(data.form, {'action': path(data.productConfigurationRouteName, data.actionParams)}) }}
        {% block submitButton %}
            <button class="{{ data.submitButtonClass }}">
                {% set iconName = data.submitButtonIcon %}

                {% if iconName %}
                    {% include atom('icon') with {
                        modifiers: data.submitButtonIconModifiers,
                        data: {
                            name: iconName,
                        },
                    } only %}
                {% endif %}
                {{ 'product_configuration_widget.configure' | trans }}
            </button>
        {% endblock %}
    {{ form_end(data.form) }}
{% endblock %}
